# Copy to .env and fill in values

# Database (only set in production - for local dev, database.yml handles it)
# DATABASE_URL=postgres://localhost/show_notes_development

# Podcast Index (get free keys at https://podcastindex.org/)
PODCAST_INDEX_API_KEY=
PODCAST_INDEX_API_SECRET=

# AssemblyAI (for transcription) - get key at https://www.assemblyai.com/
ASSEMBLYAI_API_KEY=

# Anthropic (for Claude summarization)
ANTHROPIC_API_KEY=sk-ant-...

# Rails
SECRET_KEY_BASE=  # generate with: rails secret

# Resend (for transactional email) - get key at https://resend.com/
# Required for production, optional for local dev (uses letter_opener)
RESEND_API_KEY=re_...

# App host for email links (production only)
APP_HOST=listen.davepaola.com
