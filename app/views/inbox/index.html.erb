<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Inbox</h1>

  <% if @user_episodes.any? %>
    <div class="space-y-3">
      <% @user_episodes.each do |user_episode| %>
        <%= turbo_frame_tag dom_id(user_episode) do %>
          <div class="flex gap-4 p-4 bg-white rounded-lg shadow border border-gray-200">
            <div class="flex-1 min-w-0">
              <h3 class="font-medium truncate"><%= user_episode.title %></h3>
              <p class="text-gray-600 text-sm"><%= user_episode.podcast.title %></p>
              <div class="flex items-center gap-2 mt-2 text-sm">
                <% if user_episode.episode.published_at.present? %>
                  <span class="text-gray-500">
                    <%= user_episode.episode.published_at.strftime("%b %d, %Y") %>
                  </span>
                <% end %>
                <% if user_episode.duration_seconds.present? %>
                  <span class="text-gray-400">&middot;</span>
                  <span class="text-gray-500">
                    <%= format_duration(user_episode.duration_seconds) %>
                  </span>
                <% end %>
                <% if user_episode.estimated_cost_cents > 0 %>
                  <span class="text-gray-400">&middot;</span>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= cost_badge_class(user_episode.estimated_cost_cents) %>">
                    ~<%= format_cost_cents(user_episode.estimated_cost_cents) %> to process
                  </span>
                <% end %>
              </div>
            </div>

            <div class="flex gap-2 flex-shrink-0 self-center">
              <%= button_to "Add to Library",
                  inbox_add_to_library_path(id: user_episode.id),
                  method: :post,
                  class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition text-sm" %>
              <%= button_to "Skip",
                  inbox_skip_path(id: user_episode.id),
                  method: :post,
                  class: "bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition text-sm" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 mb-4">Your inbox is empty. Subscribe to podcasts to see new episodes here.</p>
      <%= link_to "Find Podcasts", podcasts_path, class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>
</div>
