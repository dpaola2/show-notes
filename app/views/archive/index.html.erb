<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Archive</h1>

  <% if @user_episodes.any? %>
    <div class="space-y-3">
      <% @user_episodes.each do |user_episode| %>
        <div class="flex gap-4 p-4 bg-white rounded-lg shadow border border-gray-200">
          <div class="flex-1 min-w-0">
            <%= link_to archive_path(user_episode), class: "block" do %>
              <h3 class="font-medium truncate hover:text-blue-600"><%= user_episode.title %></h3>
            <% end %>
            <p class="text-gray-600 text-sm"><%= user_episode.podcast.title %></p>
          </div>

          <div class="flex gap-2 flex-shrink-0 self-center">
            <%= link_to "View",
                archive_path(user_episode),
                class: "text-blue-600 hover:underline text-sm" %>
            <%= button_to "Restore",
                restore_archive_path(user_episode),
                method: :post,
                class: "text-gray-600 hover:underline text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500">No archived episodes yet.</p>
    </div>
  <% end %>
</div>
