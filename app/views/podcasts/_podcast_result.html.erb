<div class="flex gap-4 p-4 bg-white rounded-lg shadow border border-gray-200">
  <% if podcast[:artwork_url].present? %>
    <img src="<%= podcast[:artwork_url] %>"
         alt="<%= podcast[:title] %> artwork"
         class="w-20 h-20 rounded-lg object-cover flex-shrink-0">
  <% else %>
    <div class="w-20 h-20 rounded-lg bg-gray-200 flex items-center justify-center flex-shrink-0">
      <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
        <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
      </svg>
    </div>
  <% end %>

  <div class="flex-1 min-w-0">
    <h3 class="font-semibold text-lg truncate"><%= podcast[:title] %></h3>
    <p class="text-gray-600 text-sm truncate"><%= podcast[:author] %></p>
    <p class="text-gray-500 text-sm mt-1 line-clamp-2"><%= truncate(podcast[:description], length: 150) %></p>
  </div>

  <div class="flex-shrink-0 self-center">
    <% if podcast[:subscribed] %>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
        Subscribed
      </span>
    <% else %>
      <%= button_to "Subscribe",
          podcasts_path(feed_id: podcast[:feed_id]),
          method: :post,
          data: { turbo_frame: "_top" },
          class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition text-sm" %>
    <% end %>
  </div>
</div>
