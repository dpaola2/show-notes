<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex gap-6 mb-8">
    <% if @podcast.artwork_url.present? %>
      <img src="<%= @podcast.artwork_url %>"
           alt="<%= @podcast.title %> artwork"
           class="w-32 h-32 rounded-lg object-cover flex-shrink-0 shadow">
    <% else %>
      <div class="w-32 h-32 rounded-lg bg-gray-200 flex items-center justify-center flex-shrink-0">
        <svg class="w-12 h-12 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
        </svg>
      </div>
    <% end %>

    <div class="flex-1">
      <h1 class="text-2xl font-bold mb-2"><%= @podcast.title %></h1>
      <p class="text-gray-600 mb-2"><%= @podcast.author %></p>
      <p class="text-gray-500 text-sm"><%= truncate(@podcast.description, length: 300) %></p>
    </div>
  </div>

  <h2 class="text-xl font-semibold mb-4">Episodes (<%= @episodes.count %>)</h2>

  <% if @episodes.any? %>
    <div class="space-y-3">
      <% @episodes.each do |episode| %>
        <div class="p-4 bg-white rounded-lg shadow border border-gray-200">
          <div class="flex justify-between items-start gap-4">
            <div class="flex-1 min-w-0">
              <h3 class="font-medium truncate"><%= episode.title %></h3>
              <p class="text-gray-500 text-sm mt-1">
                <% if episode.published_at.present? %>
                  <%= episode.published_at.strftime("%b %d, %Y") %>
                <% end %>
                <% if episode.duration_seconds.present? %>
                  <span class="mx-1">&middot;</span>
                  <%= format_duration(episode.duration_seconds) %>
                <% end %>
              </p>
            </div>

            <div class="flex gap-2 flex-shrink-0">
              <% user_episode = current_user.user_episodes.find_by(episode: episode) %>
              <% if user_episode %>
                <span class="text-sm text-gray-500 py-2">
                  In <%= user_episode.location.humanize %>
                </span>
              <% else %>
                <%= button_to "Add to Inbox",
                    inbox_index_path(episode_id: episode.id),
                    method: :post,
                    class: "text-sm bg-gray-100 text-gray-700 px-3 py-2 rounded hover:bg-gray-200 transition" %>
                <%= button_to "Add to Library",
                    add_to_library_inbox_index_path(episode_id: episode.id),
                    method: :post,
                    class: "text-sm bg-blue-600 text-white px-3 py-2 rounded hover:bg-blue-700 transition" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 text-center py-8">No episodes found. Episodes may still be loading.</p>
  <% end %>

  <div class="mt-8">
    <%= link_to "&larr; Back to Search".html_safe, podcasts_path, class: "text-blue-600 hover:underline" %>
  </div>
</div>
