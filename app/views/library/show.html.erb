<div class="max-w-4xl mx-auto px-4 py-6 sm:py-8">
  <div class="mb-4 sm:mb-6">
    <%= link_to "&larr; Back to Library".html_safe, library_index_path, class: "text-blue-600 hover:underline inline-block py-1" %>
  </div>

  <div class="flex items-start justify-between mb-2">
    <h1 class="text-xl sm:text-2xl font-bold"><%= @episode.title %></h1>
    <%= render "shared/share_button", episode: @episode %>
  </div>
  <p class="text-gray-600 mb-4 sm:mb-6"><%= @episode.podcast.title %></p>

  <% if @user_episode.ready? && @episode.summary.present? %>
    <section class="mb-6 sm:mb-8">
      <h2 class="text-lg sm:text-xl font-semibold mb-3 sm:mb-4">Summary</h2>

      <div class="space-y-4 sm:space-y-6">
        <% @episode.summary.sections.each do |section| %>
          <div class="bg-white p-3 sm:p-4 rounded-lg shadow border border-gray-200">
            <h3 class="font-semibold mb-2"><%= section["title"] %></h3>
            <p class="text-gray-700 text-sm sm:text-base leading-relaxed"><%= section["content"] %></p>
          </div>
        <% end %>
      </div>

      <% if @episode.summary.quotes.any? %>
        <h3 class="text-base sm:text-lg font-semibold mt-5 sm:mt-6 mb-3 sm:mb-4">Notable Quotes</h3>
        <div class="space-y-3">
          <% @episode.summary.quotes.each do |quote| %>
            <blockquote class="border-l-4 border-blue-500 pl-3 sm:pl-4 py-2 sm:py-3 bg-blue-50 rounded-r cursor-pointer hover:bg-blue-100 active:bg-blue-100"
                        data-controller="audio-seek"
                        data-audio-seek-time-value="<%= quote['start_time'] %>"
                        data-action="click->audio-seek#seek">
              <p class="text-gray-800 text-sm sm:text-base">"<%= quote["text"] %>"</p>
              <p class="text-gray-500 text-xs sm:text-sm mt-1">
                <%= format_duration(quote["start_time"].to_i) %>
              </p>
            </blockquote>
          <% end %>
        </div>
      <% end %>
    </section>

    <details class="mb-6 sm:mb-8">
      <summary class="cursor-pointer text-gray-600 hover:text-gray-800 py-2">Original Show Notes</summary>
      <div class="mt-3 sm:mt-4 prose prose-sm max-w-none">
        <%= sanitize @episode.description %>
      </div>
    </details>

    <section class="mb-6 sm:mb-8">
      <h2 class="text-base sm:text-lg font-semibold mb-3 sm:mb-4">Audio</h2>
      <audio controls
             src="<%= @episode.audio_url %>"
             class="w-full"
             data-controller="audio-player">
      </audio>
    </section>

    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
      <%= button_to "Mark as Done",
          archive_library_path(@user_episode),
          method: :post,
          class: "w-full sm:w-auto bg-green-600 text-white px-4 py-2.5 sm:py-2 rounded-lg hover:bg-green-700 transition text-center font-medium" %>
      <%= button_to "Regenerate Summary",
          regenerate_library_path(@user_episode),
          method: :post,
          class: "w-full sm:w-auto bg-gray-100 text-gray-700 px-4 py-2.5 sm:py-2 rounded-lg hover:bg-gray-200 transition text-center font-medium" %>
    </div>
  <% elsif @user_episode.error? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-3 sm:p-4">
      <p class="text-red-800 text-sm sm:text-base">Processing failed: <%= @user_episode.processing_error %></p>
      <%= button_to "Retry",
          retry_processing_library_path(@user_episode),
          method: :post,
          class: "mt-3 sm:mt-4 w-full sm:w-auto bg-red-600 text-white px-4 py-2.5 sm:py-2 rounded-lg hover:bg-red-700 transition font-medium" %>
    </div>
  <% else %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3 sm:p-4">
      <p class="text-yellow-800 text-sm sm:text-base">
        Processing: <%= @user_episode.processing_status.humanize %>...
      </p>
      <p class="text-yellow-600 text-xs sm:text-sm mt-2">This page will update when ready.</p>

      <% if @user_episode.next_retry_at.present? %>
        <div class="mt-3 sm:mt-4 p-2 sm:p-3 bg-yellow-100 border border-yellow-300 rounded text-xs sm:text-sm font-mono">
          <p class="font-semibold text-yellow-900">Retry Debug Info</p>
          <ul class="mt-2 space-y-1 text-yellow-800">
            <li>Retry attempt: <%= @user_episode.retry_count %> / 5</li>
            <li>Next retry at: <%= @user_episode.next_retry_at.strftime("%Y-%m-%d %H:%M:%S %Z") %></li>
            <li>
              Time until retry:
              <% seconds_until = (@user_episode.next_retry_at - Time.current).to_i %>
              <% if seconds_until > 0 %>
                <%= seconds_until / 60 %>m <%= seconds_until % 60 %>s
              <% else %>
                <span class="text-green-700">Executing now...</span>
              <% end %>
            </li>
            <% if @user_episode.last_error_at.present? %>
              <li>Last error: <%= time_ago_in_words(@user_episode.last_error_at) %> ago</li>
            <% end %>
            <% if @user_episode.processing_error.present? %>
              <li class="break-words">Status: <%= @user_episode.processing_error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
