<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Your Subscriptions</h1>

  <% if @subscriptions.any? %>
    <div class="space-y-4">
      <% @subscriptions.each do |subscription| %>
        <div class="flex gap-4 p-4 bg-white rounded-lg shadow border border-gray-200">
          <% if subscription.podcast.artwork_url.present? %>
            <img src="<%= subscription.podcast.artwork_url %>"
                 alt="<%= subscription.podcast.title %>"
                 class="w-16 h-16 rounded-lg object-cover flex-shrink-0">
          <% else %>
            <div class="w-16 h-16 rounded-lg bg-gray-200 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M18 3a1 1 0 00-1.196-.98l-10 2A1 1 0 006 5v9.114A4.369 4.369 0 005 14c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V7.82l8-1.6v5.894A4.37 4.37 0 0015 12c-1.657 0-3 .895-3 2s1.343 2 3 2 3-.895 3-2V3z"/>
              </svg>
            </div>
          <% end %>

          <div class="flex-1 min-w-0">
            <%= link_to subscription.podcast.title,
                podcast_path(subscription.podcast),
                class: "font-semibold hover:text-blue-600" %>
            <p class="text-gray-600 text-sm"><%= subscription.podcast.author %></p>
          </div>

          <div class="flex-shrink-0 self-center">
            <%= button_to "Unsubscribe",
                podcast_path(subscription.podcast),
                method: :delete,
                class: "text-red-600 hover:text-red-800 text-sm",
                data: { turbo_confirm: "Unsubscribe from #{subscription.podcast.title}?" } %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 mb-4">You haven't subscribed to any podcasts yet.</p>
      <%= link_to "Find Podcasts", podcasts_path, class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>
</div>
