<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Trash</h1>

  <p class="text-gray-500 text-sm mb-6">Episodes in trash are automatically deleted after 90 days.</p>

  <% if @user_episodes.any? %>
    <div class="space-y-3">
      <% @user_episodes.each do |user_episode| %>
        <div class="flex gap-4 p-4 bg-white rounded-lg shadow border border-gray-200">
          <div class="flex-1 min-w-0">
            <h3 class="font-medium truncate text-gray-600"><%= user_episode.title %></h3>
            <p class="text-gray-500 text-sm"><%= user_episode.podcast.title %></p>
            <% if user_episode.trashed_at.present? %>
              <p class="text-gray-400 text-xs mt-1">
                Trashed <%= time_ago_in_words(user_episode.trashed_at) %> ago
              </p>
            <% end %>
          </div>

          <div class="flex-shrink-0 self-center">
            <%= button_to "Restore",
                restore_trash_path(user_episode),
                method: :post,
                class: "text-blue-600 hover:underline text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500">Trash is empty.</p>
    </div>
  <% end %>
</div>
